{% extends "layouts/base.jinja" %}



{% block content %}
<h1>Admin Login</h1>
{% if auth_fail %}
  <div class="alert alert-danger">
    Incorrect username or password.
  </div>
{% endif %}

<form action="admin" method="post">
  <div class="form-group row">
    <label for="user_name" class="col-xs-2 col-form-label">Username</label>
    <div class="col-xs-10">
      <input class="form-control" type="text" value="" id="user_name" name="user_name" >
    </div>
  </div>
  <div class="form-group row">
    <label for="password" class="col-xs-2 col-form-label">Password</label>
    <div class="col-xs-10">
      <input class="form-control" type="password" value="" id="password" name="password" >
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

{% endblock %}

